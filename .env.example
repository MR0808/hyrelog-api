# ============================================================
# Internal Authentication
# ============================================================
INTERNAL_TOKEN=dev-internal-token-change-in-production

# ============================================================
# API Server Configuration
# ============================================================
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# ============================================================
# Default Data Region
# ============================================================
# Options: US, EU, UK, AU
DEFAULT_DATA_REGION=US

# ============================================================
# Database URLs (Multi-Region)
# ============================================================
# Local development uses Docker Compose with 4 Postgres instances
DATABASE_URL_US=postgresql://hyrelog:hyrelog@localhost:54321/hyrelog_us
DATABASE_URL_EU=postgresql://hyrelog:hyrelog@localhost:54322/hyrelog_eu
DATABASE_URL_UK=postgresql://hyrelog:hyrelog@localhost:54323/hyrelog_uk
DATABASE_URL_AU=postgresql://hyrelog:hyrelog@localhost:54324/hyrelog_au

# ============================================================
# S3 / MinIO Configuration (Local Development)
# ============================================================
# MinIO endpoint for local development
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# S3 Bucket names per region (for local dev, these are MinIO buckets)
S3_BUCKET_US=hyrelog-archive-us
S3_BUCKET_EU=hyrelog-archive-eu
S3_BUCKET_UK=hyrelog-archive-uk
S3_BUCKET_AU=hyrelog-archive-au

# ============================================================
# AWS Configuration (Production)
# ============================================================
# Uncomment and set these for production deployments
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# ============================================================
# Archival Configuration
# ============================================================
# Days before moving to cold storage (Glacier/Deep Archive)
COLD_ARCHIVE_AFTER_DAYS=365

# ============================================================
# Rate Limiting (Phase 1 - placeholders for now)
# ============================================================
RATE_LIMIT_API_KEY_PER_MIN=1200
RATE_LIMIT_IP_PER_MIN=600

# ============================================================
# API Key Secret
# ============================================================
API_KEY_SECRET=dev-api-key-secret-change-in-production
