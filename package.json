{
  "name": "hyrelog-api",
  "version": "0.1.0",
  "private": true,
  "description": "HyreLog API - Immutable audit log API for B2B SaaS",
  "workspaces": [
    "services/api",
    "services/worker",
    "infra"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=services/api",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,js,json,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\" --ignore-path .gitignore",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "prisma:generate": "npm run prisma:generate --workspace=services/api",
    "prisma:migrate": "npm run prisma:migrate --workspace=services/api",
    "prisma:migrate:all": "powershell -ExecutionPolicy Bypass -File ./scripts/migrate-all-regions.ps1",
        "prisma:studio": "npm run prisma:studio --workspace=services/api",
        "prisma:studio:us": "powershell -Command \"$env:DATABASE_URL='postgresql://hyrelog:hyrelog@localhost:54321/hyrelog_us'; npm run prisma:studio --workspace=services/api\"",
    "seed": "npm run prisma:seed --workspace=services/api",
    "worker": "npm run dev --workspace=services/worker",
    "verify": "powershell -ExecutionPolicy Bypass -File ./scripts/verify-setup.ps1",
    "test:exports": "powershell -ExecutionPolicy Bypass -File ./scripts/test-exports.ps1",
    "test:worker": "powershell -ExecutionPolicy Bypass -File ./scripts/test-worker-jobs.ps1",
    "test:export-download": "powershell -ExecutionPolicy Bypass -File ./scripts/test-export-download.ps1",
    "minio:create-buckets": "node scripts/create-minio-buckets.js",
    "unmark-cold-archived": "tsx scripts/unmark-cold-archived.js"
  },
  "devDependencies": {
    "@prisma/client": "^7.2.0",
    "prettier": "^3.2.5",
    "prisma": "^7.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

